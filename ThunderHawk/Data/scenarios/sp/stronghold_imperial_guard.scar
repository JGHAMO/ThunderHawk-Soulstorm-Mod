		Rule_AddInterval(Rule_Convoy_Path_Two_B, g_convoy_MaxTime_SpentCheckpoint)

	-- Order transport to each locations first checkpoint: 12
	elseif g_spawnLocation == 2 and
		g_currentAlertStatus > 2
	then
