		Rule_AddInterval(Rule_Convoy_Path_Two_A, g_convoy_MaxTime_SpentCheckpoint)
	
	-- Order transport to each locations first checkpoint: 13
	elseif g_spawnLocation == 3 and
		g_currentAlertStatus < 2
	then
