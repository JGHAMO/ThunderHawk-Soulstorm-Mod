		Cmd_MoveToMarker("sg_convoy_transport_"..g_spawnLocation, "mkr_convoy_checkPoint11")
		Rule_AddInterval(Rule_Convoy_Path_Three, g_convoy_MaxTime_SpentCheckpoint)

