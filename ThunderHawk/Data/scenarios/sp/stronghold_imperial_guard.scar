					Cmd_AttackMovePos("sg_spotter_HQ"..i, SGroup_GetPosition("skill_target"))
				end
			end
		end

	-- Remove the Rule since the Gun Has Been Destroyed
	else
		Rule_Remove(Rule_Spotter_Has_Been_Hurt_PrepareAttack)
	end
end

