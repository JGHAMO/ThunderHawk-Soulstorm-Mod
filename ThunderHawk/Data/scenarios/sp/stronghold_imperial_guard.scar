		Cmd_MoveToMarker("sg_convoy_transport_"..g_spawnLocation, "mkr_convoy_checkPoint16")
		Rule_AddInterval(Rule_Convoy_Path_Four_B, g_convoy_MaxTime_SpentCheckpoint)

